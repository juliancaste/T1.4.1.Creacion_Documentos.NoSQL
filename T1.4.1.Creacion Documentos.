

db.APP.aggregate([
  { $group: {
    _id:0, 
    primero: { $first : "$Efectivo_Equivalentes" },
    ultimo: { $last : "$Cuentas_cobrar_Corrientes" },
    maximo: { $max : "$Propiedad_Planta_Equipo" },
    minimo: { $min : "$Patrimonio_Total" },
    suma: { $sum : "$Prima_Emision" },
    promedio: { $avg : "$Pasivos_Corrientes_Totales" }
    }}
])

